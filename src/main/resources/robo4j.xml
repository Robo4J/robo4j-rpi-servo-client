<robo4j>
    <roboUnit id="controller">
        <class>com.robo4j.rpi.servos.unit.ServosControlUnit</class>
        <config name="com.robo4j.root">

        </config>
    </roboUnit>

    <roboUnit id="http">
        <class>com.robo4j.socket.http.units.HttpServerUnit</class>
        <config name="com.robo4j.root">
            <value name="port" type="int">8025</value>
            <value name="packages" type="String">com.robo4j.socket.http.codec</value>
            <value name="unitPathsConfig" type="String">[{"roboUnit":"controller","method":"POST"}]</value>
        </config>
    </roboUnit>
</robo4j>